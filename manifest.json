{
    "name": "TeamSpeak",
    "id": "teamspeak",
    "packaging_format": 1,
    "description": {
        "en": "TeamSpeak package for YunoHost.",
        "fr": "TeamSpeak pour YunoHost."
    },
    "version": "2.0",
    "url": "http://teamspeak.com/",
    "license": "free",
    "maintainer": {
        "name": "liberodark",
        "email": "liberodark@gmail.com"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx",
        "php5-fpm",
        "mysql"
    ],
    "arguments": {
        "install": [{
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain name for TeamSpeak",
                    "fr": "Choisissez un nom de domaine pour TeamSpeak"
                },
                "example": "example.com"
            },

            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for TeamSpeak /ts is accepted",
                    "fr": "Choisissez un chemin pour TeamSpeak /ts est accept√©"
                },
                "example": "/ts",
                "default": "/ts"
            },
            
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public site ?",
                    "fr": "Est-ce un site public ?"
                },
                "default": "true"
            }
        ]
    }
}
